<div class='playersPage'>
  <h1>Players!</h1>

  <h4><a href='/'>Home</a></h4>
  <button class="seePlayer" type="button">See Player Info!</button>

  <div class="playerInfo">
    <% @players.each do |player| %>
    <p><%= player.name %>
    <div class="singleInfo">
      <%= player.email %>
    </div>
    </p>
    <% end %>
  </div>

  <button class="addPlayer" type="button">Add Player!</button>
  <br>
  <br>

  <div class="playerForm">
    <form action="/players" method="post">

      <label for="name">Name:</label>
      <input name="player-name" id="name" type="text"><br>

      <label for="email">Email:</label>
      <input name="player-email" id="email" type="email"><br>

      <label for="password">Password:</label>
      <input name="player-password" id="password" type="password"><br>
      <input type="submit">

    </form>
  </div>

</div>